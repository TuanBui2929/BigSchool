@model IEnumerable<BigSchool.Models.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <ul class="course">
        @foreach(var coure in Model)
            {
        <li>
            <div class="date">
                <div class="month">
                    @coure.DateTime.ToString("MM")
                </div>
                <div class="day">
                    @coure.DateTime.ToString("dd")
                </div>
            </div>
            
            <div class="details">
                <span class="lecture">
                    @coure.Name
                </span>
                <br />
                <span class="category">
                    @coure.Category.Name
                </span>
                <button data-course-id="@coure.Id" class="btn btn-default btn-sm js-tongle-attendance" > Going?</button>
            </div>
        </li>

            }
    </ul>

    @section scripts{
        <script>
            $(document).ready(function () {
                $(".js-tongle-attendance").click(function (e) {
                    var button = $(e.target);
                    $.post("/api/attendances", { Id: button.attr("data-course-id") })
                        .done(function () {
                            alert("Register coure Sucessfully")
                            button
                                .removeClass("btn-default")
                                .addClass("btn-info")
                                .text("Going");
                        }).fail(function () {
                            alert("Something fail");
                        });
                });
            });

        </script>
        
        
        }

</div>