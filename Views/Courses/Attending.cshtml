@model IEnumerable<BigSchool.Models.Course>

@{
    ViewBag.Title = "Attending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Attending</h2>

<div class="row">
    <ul class="course">
        @foreach (var coure in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @coure.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @coure.DateTime.ToString("dd")
                    </div>
                </div>

                <div class="details">
                    <span class="lecture">
                        @coure.Name
                    </span>
                    <br />
                    <span class="category">
                        @coure.Category.Name
                    </span>

                </div>
            </li>

        }
    </ul>



</div>
